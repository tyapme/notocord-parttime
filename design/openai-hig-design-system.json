  "components": {
    "button": {
      "minHeight": "40px",
      "cornerRadius": "var(--radius-pill)",
      "fontWeight": 500
    },
    "input": {
      "minHeight": "48px",
      "cornerRadius": "var(--radius-lg)",
      "border": "1px solid var(--outline-variant)"
    },
    "card": {
      "cornerRadius": "var(--radius-xl)",
      "shadow": "var(--elevation-card)"
    },
    "modal": {
      "cornerRadius": "var(--radius-xl)",
      "shadow": "var(--elevation-overlay)"
